{
  "name": "voice-speaker",
  "version": "1.0.0",
  "description": "Telegram bot which transforms chat conversation in audio files",
  "main": "dist/app.js",
  "repository": "https://github.com/Moldoteck/VoiceSpeaker",
  "author": "Moldoteck <moldotecko@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "distribute": "yarn build-ts && node dist/app.js",
    "develop": "concurrently -k -i -p \"[{name}]\" -n \"Node,TypeScript\" -c \"yellow.bold,cyan.bold\" \"yarn watch-js\" \"yarn watch-ts\"",
    "build-ts": "tsc --skipLibCheck",
    "watch-ts": "tsc -w --skipLibCheck",
    "watch-js": "nodemon dist/app.js"
  },
  "devDependencies": {
    "@types/mongoose": "^5.10.4",
    "@types/node": "^14.14.35",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.6.0",
    "dotenv": "^8.2.0",
    "module-alias": "^2.2.2",
    "mongoose": "5.10.18",
    "telegraf": "4.3.0",
    "telegraf-i18n": "6.6.0",
    "typescript": "^4.2.3",
    "@google-cloud/text-to-speech": "3.1.3",
    "memory-streams":"^0.1.3",
    "fluent-ffmpeg":"^2.1.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
